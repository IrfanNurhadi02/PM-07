<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zan"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Username"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/image_profile"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView_following_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Following:"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_below="@id/profile_username"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView_following_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/textView_following_label"
        android:layout_alignBaseline="@id/textView_following_label"
        android:text="0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/profile_username"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView_follower_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/textView_following_label"
        android:layout_marginTop="182dp"
        android:layout_marginStart="140dp"
        android:text="Followers:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_follower_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/textView_follower_label"
        android:layout_alignBaseline="@id/textView_follower_label"
        android:text="0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/textView_following_count"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/feed_post_id"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/textView_follower_count"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-118dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/zan"
        android:textSize="16sp" />

    <!-- Tambahkan TextView di atas ImageView -->
    <TextView
        android:id="@+id/textView_postingan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/feed_post_id"
        android:layout_alignTop="@id/feed_post_id"
        android:layout_marginStart="122dp"
        android:layout_marginTop="-30dp"
        android:text="Postingan"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

</RelativeLayout>
