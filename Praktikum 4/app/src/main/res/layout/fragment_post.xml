<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainerFl">

    <TextView
        android:id="@+id/textViewKonten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Konten"
        android:textSize="20sp"
        android:textColor="#2E1A47"
        android:fontFamily="sans-serif"
        android:layout_marginHorizontal="12dp"
        android:textFontWeight="800" />

    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:id="@+id/descriptionEt"
        android:background="@drawable/content"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minHeight="100dp"
        android:hint="Masukkan Konten"
        android:cursorVisible="true"
        android:maxLines="3"
        android:clipToOutline="true"
        android:layout_below="@id/textViewKonten"
        android:layout_marginHorizontal="12dp" />

    <TextView
        android:textSize="20sp"
        android:textColor="#2E1A47"
        android:id="@+id/textViewPilihGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pilih Gambar"
        android:layout_below="@id/descriptionEt"
        android:fontFamily="sans-serif"
        android:layout_marginHorizontal="12dp"
        android:textFontWeight="800" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGambar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/textViewPilihGambar"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="20dp">

        <ImageView
        android:id="@+id/imgContentIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/add_picture"
        android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <Button
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:id="@+id/postingBtn"
        android:background="@drawable/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Posting"
        android:layout_below="@id/cardViewGambar"
        android:layout_marginHorizontal="12dp" />
</RelativeLayout>
